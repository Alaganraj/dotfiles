# Create a new directory and enter it
function mk() {
  mkdir -p "$@" && cd "$@"
}

function ct() {
 curl "https://cheat.sh/$1"
}

function dud {
  du -d $1 -h
}

function lp {
  while true; do $1; $2; $3; $4; sleep 1; echo "--------------------"; done
}

function gfp {
	git format-patch -$1 HEAD
}
